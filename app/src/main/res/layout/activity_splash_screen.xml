<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_intro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_square"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".activity.SplashScreenActivity">

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:progressTint="@color/white"
        android:progressBackgroundTint="@color/colorPrimaryDark"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:background="@color/white"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/pb"
        android:layout_margin="8dp"
        app:riv_mutate_background="true"
        app:riv_border_color="@android:color/darker_gray"
        app:riv_border_width="0.5dip"
        app:riv_corner_radius="30dip"
        app:riv_oval="true" />

    <ImageView
        android:id="@+id/logo_app"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_above="@id/pb"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/service" />

</RelativeLayout>
