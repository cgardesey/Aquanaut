<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">#EEEEEE</item>
        <item name="android:textColor">#FF515156</item>
    </style>
    <style name="AppTheme.ColorPrimaryAccent">
        <item name="colorAccent">@color/colorPrimary</item> <!-- Whatever color you want-->
    </style>
    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/colorAccent</item>
    </style>

</resources>
